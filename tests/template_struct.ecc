template <int M> struct RGB {
	unsigned<M> R;
	unsigned<M> G;
	unsigned<M> B;
};

template <int M> RGB<M> from_greyscale(unsigned<M> Y) {
	RGB<M> x;
	x.R = Y;
	x.G = Y;
	x.B = Y;
	return x;
}

const int bpp = 8;

block grey_to_rgb(unsigned<bpp> input) => (RGB<bpp> output) {
	output = from_greyscale<bpp>(input);
};
